{
    "name": "task7",
    "type": "module",
    "devDependencies": {
        "@wdio/allure-reporter": "^8.24.12",
        "@wdio/cli": "^8.26.0",
        "@wdio/local-runner": "^8.26.0",
        "@wdio/mocha-framework": "^8.24.12",
        "@wdio/spec-reporter": "^8.24.12",
        "allure-commandline": "^2.25.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1"
    },
    "scripts": {
        "test": "cross-env ENV=http://localhost:3000 wdio run ./wdio.conf.js",
